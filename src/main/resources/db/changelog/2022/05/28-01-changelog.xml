<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1653689998359-1" author="Alexander Vasiliev">
        <createTable tableName="exam_sheet_students">
            <column name="exam_sheet_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="students_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1653689998359-2" author="Alexander Vasiliev">
        <createTable tableName="student">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_student"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="birthday" type="DATE"/>
        </createTable>
    </changeSet>
    <changeSet id="1653689998359-3" author="Alexander Vasiliev">
        <addForeignKeyConstraint baseColumnNames="exam_sheet_id" baseTableName="exam_sheet_students"
                                 constraintName="fk_exashestu_on_exam_sheet"
                                 referencedColumnNames="id" referencedTableName="exam_sheet"/>
    </changeSet>
    <changeSet id="1653689998359-4" author="Alexander Vasiliev">
        <addForeignKeyConstraint baseColumnNames="students_id" baseTableName="exam_sheet_students"
                                 constraintName="fk_exashestu_on_student" referencedColumnNames="id"
                                 referencedTableName="student"/>
    </changeSet>

</databaseChangeLog>